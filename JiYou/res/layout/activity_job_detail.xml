<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:genius="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_skin"
    android:orientation="vertical" >

    <!-- 标题 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/color_title"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/layout_job_detail_back"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:background="@color/color_title"
            android:gravity="center" >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:contentDescription="@string/txt_job_detail_title"
                android:src="@drawable/icon_arrow_left_white" />
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/txt_job_detail_title"
            android:textColor="@color/color_white"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:background="@color/color_title" >
        </LinearLayout>
    </LinearLayout>

    <!-- 中间核心部分 -->

    <ScrollView
        android:id="@+id/layout_job_detail_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/layout_job_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp" >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:contentDescription="@string/img_user"
                    android:gravity="center_vertical"
                    android:src="@drawable/img_company" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txt_job_detail_job"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_job_item_job"
                        android:textColor="@color/color_light_blue"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/txt_job_detail_compnay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/txt_job_item_company"
                        android:textColor="@color/color_gray"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 职位描述 -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="@string/txt_job_detail_description_title"
                android:textColor="#458B74"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_job_detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:padding="10dp"
                android:text="@string/txt_job_detail_description"
                android:textSize="14sp" />

            <!-- 职位要求 -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="@string/txt_job_detail_requirement_title"
                android:textColor="#458B74"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_job_detail_requirement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:padding="10dp"
                android:text="@string/txt_job_detail_requirement"
                android:textSize="14sp" />

            <!-- 发布人信息 -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="@string/txt_party_detail_pulisher"
                android:textColor="#458B74"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp" >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:contentDescription="@string/img_user"
                    android:gravity="center_vertical"
                    android:src="@drawable/img_user" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical" >

                        <TextView
                            android:id="@+id/txt_job_detail_pulisher_realname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_job_detail_pulisher_realname"
                            android:textColor="@color/color_light_blue"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txt_job_detail_pulisher_companyjob"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:text="@string/txt_job_detail_pulisher_companyjob"
                            android:textColor="@color/color_light_blue_light"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_job_detail_pulisher_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="@string/txt_job_detail_pulisher_email"
                        android:textColor="@color/color_gray"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txt_job_detail_pulisher_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="@string/txt_job_detail_pulisher_time"
                        android:textColor="@color/color_gray"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>