<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp" >

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:contentDescription="@string/img_user"
        android:src="@drawable/img_user" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/txt_party_attender_realname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_party_attender_realname"
                android:textColor="@color/color_light_blue"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_party_attender_companyjob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/txt_party_attender_companyjob"
                android:textColor="@color/color_light_blue_light"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp" >

            <TextView
                android:id="@+id/txt_party_attender_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_party_attender_time"
                android:textColor="@color/color_black"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>