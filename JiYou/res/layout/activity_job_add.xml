<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:genius="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_skin"
    android:scrollbars="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_skin"
        android:orientation="vertical" >

        <!-- 标题 -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/color_title"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/layout_job_add_cancel"
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:background="@color/color_title"
                android:gravity="center" >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:contentDescription="@string/txt_job_add_title"
                    android:src="@drawable/icon_arrow_left_white" />
            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/txt_job_add_title"
                android:textColor="@color/color_white"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="fill_parent"
                android:background="@color/color_title"
                android:gravity="center" >
            </LinearLayout>
        </LinearLayout>

        <!-- 职位信息 -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="@string/txt_job_add_job_title"
            android:textColor="#458B74"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ADADAD"
            android:padding="15dp" />

        <!-- 职位名称 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="15dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_job_add_job"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right" >

                <net.qiujuer.genius.widget.GeniusEditText
                    android:id="@+id/edt_job_add_job"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:hint="@string/edt_job_add_job"
                    android:inputType="text"
                    android:textColor="@color/color_light_blue"
                    android:textColorHint="@color/color_gray"
                    android:textSize="14sp"
                    genius:g_fieldStyle="transparent"
                    genius:g_showTitle="false"
                    genius:g_theme="@array/StrawberryIce" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ADADAD"
            android:padding="15dp" />

        <!-- 用人公司 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="15dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_job_add_company"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right" >

                <net.qiujuer.genius.widget.GeniusEditText
                    android:id="@+id/edt_job_add_company"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:hint="@string/edt_job_add_company"
                    android:inputType="text"
                    android:textColor="@color/color_light_blue"
                    android:textColorHint="@color/color_gray"
                    android:textSize="14sp"
                    genius:g_fieldStyle="transparent"
                    genius:g_showTitle="false"
                    genius:g_theme="@array/StrawberryIce" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ADADAD"
            android:padding="15dp" />

        <!-- 工作地点 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="15dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_job_add_city"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right" >

                <net.qiujuer.genius.widget.GeniusEditText
                    android:id="@+id/edt_job_add_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:hint="@string/edt_job_add_city_hint"
                    android:inputType="text"
                    android:textColor="@color/color_light_blue"
                    android:textColorHint="@color/color_gray"
                    android:textSize="14sp"
                    genius:g_fieldStyle="transparent"
                    genius:g_showTitle="false"
                    genius:g_theme="@array/StrawberryIce" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ADADAD"
            android:padding="15dp" />
        
        <!-- 实习薪资 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="15dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_job_add_salary"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right" >

                <net.qiujuer.genius.widget.GeniusEditText
                    android:id="@+id/edt_job_add_salary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:hint="@string/edt_job_add_salary_hint"
                    android:inputType="text"
                    android:textColor="@color/color_light_blue"
                    android:textColorHint="@color/color_gray"
                    android:textSize="14sp"
                    genius:g_fieldStyle="transparent"
                    genius:g_showTitle="false"
                    genius:g_theme="@array/StrawberryIce" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ADADAD"
            android:padding="15dp" />

        <!-- 联系邮箱 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:baselineAligned="false"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="15dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_job_add_email"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right" >

                <net.qiujuer.genius.widget.GeniusEditText
                    android:id="@+id/edt_job_add_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:hint="@string/edt_job_add_email_hint"
                    android:inputType="text"
                    android:textColor="@color/color_light_blue"
                    android:textColorHint="@color/color_gray"
                    android:textSize="14sp"
                    genius:g_fieldStyle="transparent"
                    genius:g_showTitle="false"
                    genius:g_theme="@array/StrawberryIce" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ADADAD"
            android:padding="15dp" />

        <!-- 职位描述 -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="15dp"
            android:text="@string/txt_job_add_description"
            android:textColor="#458B74"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ADADAD"
            android:padding="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/color_white" >

            <net.qiujuer.genius.widget.GeniusEditText
                android:id="@+id/edt_job_add_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edt_job_add_description_hint"
                android:inputType="textMultiLine"
                android:textColor="@color/color_light_blue"
                android:textColorHint="@color/color_gray"
                android:textSize="14sp"
                genius:g_fieldStyle="transparent"
                genius:g_showTitle="false"
                genius:g_theme="@array/StrawberryIce" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ADADAD"
            android:padding="15dp" />
        
        
        <!-- 职位要求 -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="15dp"
            android:text="@string/txt_job_add_requirement"
            android:textColor="#458B74"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ADADAD"
            android:padding="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/color_white" >

            <net.qiujuer.genius.widget.GeniusEditText
                android:id="@+id/edt_job_add_requirement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/edt_job_add_requirement_hint"
                android:inputType="textMultiLine"
                android:textColor="@color/color_light_blue"
                android:textColorHint="@color/color_gray"
                android:textSize="14sp"
                genius:g_fieldStyle="transparent"
                genius:g_showTitle="false"
                genius:g_theme="@array/StrawberryIce" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ADADAD"
            android:padding="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp" >

            <net.qiujuer.genius.widget.GeniusButton
                android:id="@+id/btn_job_add_submit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/btn_job_add_submit"
                android:textSize="15sp"
                genius:g_cornerRadii_A="10dp"
                genius:g_cornerRadii_B="10dp"
                genius:g_cornerRadii_C="10dp"
                genius:g_cornerRadii_D="10dp"
                genius:g_textAppearance="none"
                genius:g_theme="@array/ScubaBlue" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>